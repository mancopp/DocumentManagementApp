<Window x:Class="DocumentManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DocumentManagementApp"
        Title="Document Management App" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Import">
                <StackPanel>
                    <Button Content="Select Documents" Click="btnSelectDocuments_Click" Margin="0 10 0 0" />
                    <Button Content="Select Document Items" Click="btnSelectDocumentItems_Click" Margin="0 10 0 0" />
                    <Button Content="Upload" Click="btnUpload_Click" Margin="0 10 0 0" />
                </StackPanel>
            </TabItem>
            <TabItem Header="Display">
                <DataGrid x:Name="dgDocuments" AutoGenerateColumns="True" IsReadOnly="true"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
